---
import IndexButton from '@components/IndexButton.astro'
import BaseLayout from '@layouts/BaseLayout.astro'
---

<BaseLayout>
  <div id='index-container'>
    <div id='header-container'>
      <section id='header'>
        <img alt='EC' />
        <div id='name'>
          <h1>Evangelos Chatzaroulas</h1>
          <h2>PhD Candidate @ Surrey</h2>
        </div>
      </section>
    </div>
    <section id='content'>
      <div id='quote'>
        <h3>Reinforcement Learning, World Models & Causality.</h3>
        <h4>Sometimes Language Modelling and Bioinformatics.</h4>
      </div>
      <ul id='index-buttons'>
        <IndexButton href='/blog' bg='light'>Blog</IndexButton>
        <IndexButton
          href='https://scholar.google.com/citations?user=H0FOMNcAAAAJ&hl=en'
          bg='medium'
        >
          Papers
        </IndexButton>
        <IndexButton href='https://github.com/evangelos-ch' bg='dark'>
          Code
        </IndexButton>
      </ul>
    </section>
  </div>
</BaseLayout>

<style lang='scss'>
  #index-container {
    height: 100vh;
    width: 100%;
    background-image: linear-gradient(188deg, #0c191d 0%, black 60%);
  }

  #header-container {
    height: 50vh;
    position: relative;
  }

  #header {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-58%, 25%);
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1.5rem;
    z-index: 3;

    > img {
      display: inline-block;
      width: 256px;
      height: 256px;
      border-radius: 100%;
      box-shadow:
        0 10px 20px rgba(0, 0, 0, 0.15),
        0 3px 6px rgba(0, 0, 0, 0.15);
      background-image: url('/images/pfp.jpeg');
      background-size: 100%;
      background-color: var(--grey-700);
      background-blend-mode: luminosity;
    }

    #name {
      display: flex;
      flex-direction: column;
      gap: 0;

      > h1 {
        display: inline-block;
        line-height: 1;
        font-family: 'Overpass', sans-serif;
        font-size: 2.25rem;
        color: var(--grey-100);
        margin: 0;
      }

      > h2 {
        margin: 0;
        line-height: 1;
        font-family: 'DM Mono', monospace;
        display: inline-block;
        width: max-content;
        font-weight: 400;
        font-size: 1.5rem;
        background-color: var(--primary-500);
        background-image: var(--primary-gradient);
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent;
        -moz-text-fill-color: transparent;
      }
    }
  }

  #content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    position: relative;
    height: 50vh;
    z-index: 2;
    padding-top: 103px;
    overflow-y: visible;
    overflow-x: clip;

    &:before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      background-color: var(--bg);
      z-index: -1;
      border-bottom-left-radius: 50%;
      border-bottom-right-radius: 50%;
      transform: scaleX(1.35) rotateX(180deg);
      box-shadow: 0 0 60px var(--primary-400);
    }

    #quote {
      text-align: center;

      h3,
      h4 {
        margin: 0;
        display: block;
        font-family: 'Poppins', sans-serif;
        font-weight: 400;
      }

      h3 {
        color: var(--grey-900);
        font-size: 1.5rem;
      }

      h4 {
        color: var(--grey-600);
        font-size: 1.25rem;
      }
    }

    #index-buttons {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
  }
</style>
